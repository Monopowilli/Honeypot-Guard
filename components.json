
{
  "$schema": "https://ui.shadcn.com/schema.json",
  "style": "default",
  "rsc": true,
  "tsx": true,
  "tailwind": {
    "config": "tailwind.config.ts",
    "css": "app/globals.css",
    "baseColor": "neutral",
    "cssVariables": true,
    "prefix": "ui"
  },
  "aliases": {
    "components": "@/components",
    "utils": "@/lib/utils",
    "ui": "@/components/ui",
    "lib": "@/lib",
    "hooks": "@/hooks",
    "context": "@/context",
    "services": "@/services",
    "assets": "@/assets"
  },
  "iconLibrary": "lucide",
  "experimentalFeatures": {
    "animatedComponents": true,
    "darkModeVariants": true,
    "responsiveTypography": true
  },
  "defaultComponents": [
    "button",
    "card",
    "modal",
    "tooltip",
    "dropdown",
    "form",
    "accordion",
    "input",
    "badge",
    "tabs"
  ],
  "configurations": {
    "enableStrictMode": true,
    "autoImport": true,
    "treeShaking": true,
    "showLogs": true
  }
}
